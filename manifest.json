{
  "manifest_version": 3,
  "name": "Theme Engine Pro",
  "version": "3.0.0",
  "description": "Professional website customization tool with CSS variables and real-time theme application.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "icons/icon-header.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Theme Engine Pro",
    "default_icon": {
      "128": "icons/icon-header.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["editor.html", "editor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}